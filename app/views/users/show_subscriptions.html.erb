<p>Total Paid Subscriptions: <%= @subs.count %></p>

<table>
	<thead>
		<tr>
			<th style="padding:10px 20px">Email</th>
			<th style="padding:10px 20px">Plan</th>
			<th style="padding:10px 20px">Date Signed Up</th>
		</tr>
	</thead>

	<tbody>
		<% @subs.each do |sub| %>
		<tr>
			<td style="padding:10px 20px"><%= sub.user.email %></td>
			<td style="padding:10px 20px"><%= sub.plan %></td>
			<td style="padding:10px 20px"><%= sub.created_at %></td>
		</tr>
		<% end %>
	</tbody>
</table>